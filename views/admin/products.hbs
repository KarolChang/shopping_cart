<div class="container">
  <div class="row mt-3">
    <div class="col-md-3">
      <h3 style="padding-left:10px;">後台管理</h3>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><a href="/admin/products">商品列表</a></li>
        <li class="list-group-item"><a href="/admin/orders">訂單列表</a></li>
        <li class="list-group-item"><a href="/admin/authority">權限管理</a></li>
      </ul>
    </div>
    <div class="col-md-9">
      <form action="/admin/products" method="POST" enctype="multipart/form-data">
      <h5>新增商品</h5>
        <div class="input-group mb-3">
          <span class="input-group-text" id="name">Name</span>
          <input type="text" class="form-control"  name="name" required>
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text" id="price">Price</span>
          <input type="number" class="form-control" name="price" required>
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text" id="image">Image</span>
          <input type="file" class="form-control" name="image">
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text" id="description">Description</span>
          <textarea class="form-control" name="description" id="description"></textarea>
        </div>
        <button type="submit" class="btn btn-outline-success mb-3">確定新增</button>
      </form>
      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Operate</th>
          </tr>
        </thead>
        <tbody>
          {{#each products}}
          <tr>
            <th scope="row">{{this.id}}</th>
            <td>{{this.name}}</td>
            <td>{{this.price}}</td>
            <td>
              <a href="/admin/products/{{this.id}}" class="btn btn-info">詳細內容</a>
              <a href="/admin/products/{{this.id}}/edit" class="btn btn-success">編輯</a>
              <a href="/admin/products/{{this.id}}" class="btn btn-danger">刪除</a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>